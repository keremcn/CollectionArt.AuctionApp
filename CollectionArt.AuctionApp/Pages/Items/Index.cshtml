@page
@model CollectionArt.AuctionApp.Pages.Items.IndexModel
@using CollectionArt.AuctionApp.Localization
@using CollectionArt.AuctionApp.Permissions
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<AuctionAppResource> L
@inject IAuthorizationService AuthorizationService
@section scripts
{
    <abp-script src="/Pages/Items/Index.js" />
}


<abp-card>
    <abp-card-header>

        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Items"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @if (await AuthorizationService.IsGrantedAsync(AuctionAppPermissions.Items.Create))
                {
                    <abp-button id="NewItemButton"
                                text="@L["NewItem"].Value"
                                icon="plus"
                                button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="ItemsTable"></abp-table>
    </abp-card-body>
</abp-card>